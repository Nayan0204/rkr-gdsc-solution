            align-items: center;

        }
        .menu-buttons>a{
            text-decoration: none;
            color: rgb(39, 39, 39);
            font-size: 1.2vw;
        }
        .content{
            display: grid;
            grid-template-columns: 1fr 0.5fr 0.5fr 1fr;
            grid-template-rows: 1fr 0.5fr 0.5fr 1fr;
            height: 80dvh;
            margin: 3dvh 5vw;
        }
        .card{
            border :2px dashed black;
            border-radius: 2vw;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .donate{
            grid-area: 1/1/3/3;
            display: flex;
        }
        .suggest{
            grid-area: 3/3/-1/-1 ;
            text-align: right;
            display: flex;
            flex-direction: row-reverse;
        }
        /*for hover transition and content inside, change as you want*/
        /*you can change border and background color and anyhting you want*/
        .recent-donor {
            opacity: 0;
            transform: translate3d(-2rem,0,0);
            transform: opacity,tranform;
            
            
            
        }
        .recent-suggestion{
            opacity: 0;
            transform: translate3d(2rem,0,0);
            transition-property: opacity,transform;
            text-align: left;
           
        }
        .donate:hover .recent-donor,
        .suggest:hover .recent-suggestion{
            opacity: 1;
            transform: translate3d(0,0,0);
            
            
        }
        .recent-donor,
        .recent-suggestion{
            transition-duration: 0.3s;
            transition-timing-function: ease-in-out;

        }
        /*-----------*/
        
        .card>div{
            background-color: rgb(248, 233, 204);
            height: 94%;
            width: 94.5%;
            padding: 0.5vw 1vw;
            border-radius: 2vw;
        }
        .card h2{
            color: rgb(90, 51, 0);
            font-size: 2.8vw;
            line-height: 0vw;
        }
        .card p{
            font-size: 2dvh;
            line-height: 2vw;
            color:rgba(48, 27, 0, 0.829);
            padding-top: 2vw;
            padding-bottom: 2vw;
        }
        .card a{
            color: white;
            font-size: 1vw;
        }
        .buttons{
            background-color: rgb(134, 76, 0);
            display: flex;
            height: 2vw;
            width: 6vw;
            justify-content: center;
            align-items: center;
            border-radius: 0.5vw;
        }
        /*Loading Screen*/
        .loader-container{
            position: fixed;
            inset: 0;
            z-index: 999;
            background-color: black;
            display: grid;
            place-content: center;
            transition: opacity .4s ease-in-out,visibility .4s ease-in-out;
        }
        .loader{
            width: 4rem;
            height: 4rem;
            border: .4rem solid orange;
            animation: .8s ease infinite alternate spinner;
            
        }
        @keyframes spinner{
            from{
                transform: rotate(0deg);
            }
            to{
                transform: rotate(1turn);
            }
        }
        .loader-container.hidden{
            opacity: 0;
            visibility: hidden;
        }
        .content{
            opacity: 0;
            transform: translate3d(0,-1rem,0);
            transition: opacity .6s ease-in-out,transform .6s ease-in-out;
        }
        .content.visible{
            opacity: 1;
            transform: translate3d(0,0,0);
        }
        /*------------------------------*/
        
    </style>
